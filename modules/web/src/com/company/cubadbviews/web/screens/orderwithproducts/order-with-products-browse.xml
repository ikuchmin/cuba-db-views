<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.company.cubadbviews.web.screens.orderwithproducts.OrderWithProductsBrowse"
        focusComponent="orderWithProductsesTable"
        lookupComponent="orderWithProductsesTable"
        messagesPack="com.company.cubadbviews.web.screens.orderwithproducts">
    <dsContext>
        <groupDatasource id="orderWithProductsesDs"
                         class="com.company.cubadbviews.entity.OrderWithProducts"
                         view="_local">
            <query>
                <![CDATA[select e from cubadbviews$OrderWithProducts e]]>
                <filter>
                    <or>
                        <c>
                            FUNCTION('contains_in_array', e.productIds, :component$productFilterField) = true
                        </c>
                    </or>
                </filter>
            </query>
        </groupDatasource>
        <collectionDatasource id="productDs"
                              class="com.company.cubadbviews.entity.Product"
                              view="_minimal">
            <query>
                <![CDATA[select p from cubadbviews$Product p]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="orderWithProductsesTable"
            spacing="true">
        <filter id="filter"
                applyTo="orderWithProductsesTable"
                datasource="orderWithProductsesDs">
            <properties include=".*"/>
        </filter>
        <groupBox spacing="true" height="AUTO" width="100%" expand="">
            <hbox id="productFilterBox" spacing="true" height="AUTO" width="AUTO">
                <label id="productFilterLabel"
                       align="MIDDLE_CENTER"
                       value="msg://filter.product.caption"/>
                <lookupField id="productFilterField"
                             optionsDatasource="productDs"/>
            </hbox>
            <button id="Search" caption="msg://searchBtn.caption" invoke="onSearch"/>
        </groupBox>
        <groupTable id="orderWithProductsesTable"
                    width="100%">
            <actions>
                <action id="create"
                        openType="NEW_TAB"/>
                <action id="edit"
                        openType="NEW_TAB"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="customer"/>
                <column id="products"/>
            </columns>
            <rows datasource="orderWithProductsesDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="orderWithProductsesTable.create"/>
                <button id="editBtn" action="orderWithProductsesTable.edit"/>
                <button id="removeBtn" action="orderWithProductsesTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
